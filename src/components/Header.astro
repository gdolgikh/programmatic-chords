---
import { getChordsByRoot, rootOrder } from '../data/chords.js';
const groups = getChordsByRoot();
---

<header class="site-header">
  <div class="header-inner">
    <a href="/" class="logo">
      <span class="logo-icon">&#9835;</span>
      <span class="logo-text">Chord Library</span>
    </a>

    <button class="menu-toggle" aria-label="Toggle navigation" id="menuToggle">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <nav class="main-nav" id="mainNav">
      {rootOrder.map(root => (
        <div class="nav-group">
          <button class="nav-root">{root}</button>
          <div class="nav-dropdown">
            {groups[root].map(chord => (
              <a href={`/${chord.slug}/`} class="nav-link">
                {chord.quality}
              </a>
            ))}
          </div>
        </div>
      ))}
      <div class="nav-separator"></div>
      <a href="/progression-generator/" class="nav-progchord">Progression Generator</a>
    </nav>

    <div class="auth-section" id="authSection">
      <button class="sign-in-btn" id="signInBtn" style="display:flex">
        <svg width="18" height="18" viewBox="0 0 48 48">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
        </svg>
        <span>Sign in</span>
      </button>

      <div class="user-menu" id="userMenu" style="display:none">
        <button class="avatar-btn" id="avatarBtn">
          <img class="avatar-img" id="avatarImg" src="" alt="" />
        </button>
        <div class="user-dropdown" id="userDropdown">
          <div class="user-info">
            <span class="user-name" id="userName"></span>
            <span class="user-email" id="userEmail"></span>
          </div>
          <div class="dropdown-divider"></div>
          <a href="/saved/" class="dropdown-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m19 21-7-4-7 4V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"/></svg>
            Saved Chords
          </a>
          <button class="dropdown-item" id="signOutBtn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
            Sign out
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 0 1.5rem;
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    margin-top: 12px;
    padding: 0 1.5rem;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: white;
    font-weight: 700;
    font-size: 1.2rem;
    letter-spacing: -0.02em;
    flex-shrink: 0;
  }

  .logo-icon {
    font-size: 1.4rem;
    background: linear-gradient(135deg, #67e8f9, #0369a1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 110;
  }

  .menu-toggle span {
    display: block;
    width: 22px;
    height: 2px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-group {
    position: relative;
  }

  .nav-root {
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    font-weight: 600;
    padding: 0.5rem 0.75rem;
    cursor: pointer;
    border-radius: 10px;
    transition: all 0.2s ease;
    font-family: inherit;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  .nav-root:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  .nav-dropdown {
    position: absolute;
    top: calc(100% + 8px);
    left: 50%;
    transform: translateX(-50%);
    min-width: 120px;
    padding: 0.5rem;
    background: rgba(5, 20, 32, 0.95);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-radius: 14px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  /* Desktop only - no hover on mobile */
  @media (min-width: 769px) {
    .nav-group:hover .nav-dropdown {
      opacity: 1;
      visibility: visible;
    }
  }

  /* Mobile and desktop - for accordion/open state */
  .nav-group.open .nav-dropdown {
    opacity: 1;
    visibility: visible;
  }

  .nav-link {
    display: block;
    padding: 0.45rem 0.75rem;
    color: rgba(255, 255, 255, 0.75);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    border-radius: 8px;
    transition: all 0.15s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  .nav-separator {
    width: 1px;
    height: 24px;
    background: rgba(255, 255, 255, 0.15);
    margin: 0 0.25rem;
    flex-shrink: 0;
  }

  .nav-progchord {
    color: #67e8f9;
    font-size: 0.85rem;
    font-weight: 600;
    padding: 0.4rem 0.85rem;
    text-decoration: none;
    border-radius: 10px;
    border: 1px solid rgba(103, 232, 249, 0.25);
    transition: all 0.2s ease;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .nav-progchord:hover {
    color: white;
    background: rgba(103, 232, 249, 0.12);
    border-color: rgba(103, 232, 249, 0.4);
  }

  /* Auth section */
  .auth-section {
    flex-shrink: 0;
    margin-left: 0.75rem;
  }

  .sign-in-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.85rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 10px;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.85rem;
    font-weight: 600;
    font-family: inherit;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .sign-in-btn:hover {
    background: rgba(255, 255, 255, 0.14);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .user-menu {
    position: relative;
  }

  .avatar-btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 2px solid rgba(103, 232, 249, 0.4);
    background: rgba(103, 232, 249, 0.1);
    cursor: pointer;
    padding: 0;
    overflow: hidden;
    transition: border-color 0.2s ease;
  }

  .avatar-btn:hover {
    border-color: rgba(103, 232, 249, 0.7);
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .user-dropdown {
    position: absolute;
    top: calc(100% + 10px);
    right: 0;
    min-width: 220px;
    padding: 0.5rem;
    background: rgba(5, 20, 32, 0.95);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-radius: 14px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-4px);
    transition: all 0.2s ease;
    z-index: 120;
  }

  .user-dropdown.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .user-info {
    display: flex;
    flex-direction: column;
    padding: 0.5rem 0.75rem;
  }

  .user-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: white;
  }

  .user-email {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    margin-top: 0.15rem;
  }

  .dropdown-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.08);
    margin: 0.35rem 0;
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    width: 100%;
    padding: 0.5rem 0.75rem;
    color: rgba(255, 255, 255, 0.75);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    font-family: inherit;
    border: none;
    background: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.15s ease;
    text-align: left;
  }

  .dropdown-item:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Mobile */
  @media (max-width: 768px) {
    .menu-toggle {
      display: flex;
    }

    .main-nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 105;
      background: rgba(5, 20, 32, 0.95);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      flex-direction: column;
      align-items: stretch;
      justify-content: flex-start;
      padding: 5rem 1.5rem 2rem;
      gap: 0.25rem;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
      overflow-y: auto;
    }

    .main-nav.open {
      opacity: 1;
      visibility: visible;
    }

    .nav-group {
      border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    .nav-root {
      width: 100%;
      text-align: left;
      font-size: 1.1rem;
      padding: 0.75rem 0.5rem;
    }

    .nav-dropdown {
      position: static;
      transform: none;
      background: none;
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
      border: none;
      box-shadow: none;
      border-radius: 0;
      padding: 0 0 0.5rem 1rem;
      opacity: 1;
      visibility: visible;
      display: none;
    }

    .nav-group.open .nav-dropdown {
      display: flex;
    }

    .nav-link {
      font-size: 1rem;
      padding: 0.5rem;
    }

    .nav-separator {
      width: auto;
      height: 1px;
      background: rgba(255, 255, 255, 0.1);
      margin: 0.5rem 0;
    }

    .nav-progchord {
      font-size: 1.1rem;
      padding: 0.75rem 0.5rem;
      text-align: left;
      border: none;
      border-radius: 0;
    }

    .auth-section {
      margin-left: auto;
      z-index: 110;
    }

    .sign-in-btn {
      padding: 0.35rem 0.7rem;
      font-size: 0.8rem;
    }

    .user-dropdown {
      right: -0.5rem;
    }
  }
</style>

<script>
  const toggle = document.getElementById('menuToggle');
  const nav = document.getElementById('mainNav');

  toggle?.addEventListener('click', () => {
    const isOpening = !nav?.classList.contains('open');
    nav?.classList.toggle('open');
    toggle?.classList.toggle('active');

    // Lock/unlock body scroll
    if (isOpening) {
      document.body.style.overflow = 'hidden';
    } else {
      document.body.style.overflow = '';
    }
  });

  // Use matchMedia for responsive behavior
  const mobileMediaQuery = window.matchMedia('(max-width: 768px)');

  function handleMobileDropdowns(e) {
    if (e.matches) {
      // Mobile: add click handlers for accordion behavior
      document.querySelectorAll('.nav-root').forEach(btn => {
        // Remove existing listeners first
        btn.replaceWith(btn.cloneNode(true));
      });

      document.querySelectorAll('.nav-root').forEach(btn => {
        btn.addEventListener('click', (event) => {
          event.stopPropagation();
          btn.parentElement?.classList.toggle('open');
        });
      });
    }
  }

  // Initial check
  handleMobileDropdowns(mobileMediaQuery);
  // Listen for changes
  mobileMediaQuery.addEventListener('change', handleMobileDropdowns);

  // Close mobile menu on link click
  document.querySelectorAll('.nav-link').forEach(link => {
    link.addEventListener('click', () => {
      nav?.classList.remove('open');
      toggle?.classList.remove('active');
      document.body.style.overflow = '';
    });
  });
</script>

<script>
  import { supabase, supabaseConfigured } from '../lib/supabase.js';

  const signInBtn = document.getElementById('signInBtn');
  const userMenu = document.getElementById('userMenu');
  const avatarBtn = document.getElementById('avatarBtn');
  const avatarImg = document.getElementById('avatarImg');
  const userName = document.getElementById('userName');
  const userEmail = document.getElementById('userEmail');
  const userDropdown = document.getElementById('userDropdown');
  const signOutBtn = document.getElementById('signOutBtn');

  if (!supabaseConfigured) {
    // No Supabase credentials â€” show sign-in button as a placeholder
    signInBtn.style.display = 'flex';
    signInBtn.addEventListener('click', () => {
      alert('Supabase is not configured yet. Add PUBLIC_SUPABASE_URL and PUBLIC_SUPABASE_ANON_KEY to your .env file.');
    });
  } else {
    function showSignedIn(user) {
      signInBtn.style.display = 'none';
      userMenu.style.display = 'block';
      const meta = user.user_metadata;
      avatarImg.src = meta.avatar_url || meta.picture || '';
      avatarImg.alt = meta.full_name || meta.name || 'User';
      userName.textContent = meta.full_name || meta.name || 'User';
      userEmail.textContent = user.email || '';
    }

    function showSignedOut() {
      signInBtn.style.display = 'flex';
      userMenu.style.display = 'none';
      userDropdown?.classList.remove('open');
    }

    // Check current session
    const { data: { session } } = await supabase.auth.getSession();
    if (session?.user) {
      showSignedIn(session.user);
    } else {
      showSignedOut();
    }

    // Listen for auth changes (e.g., sign-in from another tab)
    supabase.auth.onAuthStateChange((_event, session) => {
      if (session?.user) {
        showSignedIn(session.user);
      } else {
        showSignedOut();
      }
    });

    // Sign in with Google
    signInBtn?.addEventListener('click', async () => {
      localStorage.setItem('auth_return_to', window.location.pathname);
      await supabase.auth.signInWithOAuth({
        provider: 'google',
        options: {
          redirectTo: window.location.origin + '/auth/callback/',
        },
      });
    });

    // Toggle dropdown
    avatarBtn?.addEventListener('click', (e) => {
      e.stopPropagation();
      userDropdown?.classList.toggle('open');
    });

    // Close dropdown on outside click
    document.addEventListener('click', () => {
      userDropdown?.classList.remove('open');
    });

    userDropdown?.addEventListener('click', (e) => {
      e.stopPropagation();
    });

    // Sign out
    signOutBtn?.addEventListener('click', async () => {
      await supabase.auth.signOut();
      showSignedOut();
    });
  }
</script>
