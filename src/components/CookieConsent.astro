<div id="cookieConsent" class="cookie-banner" transition:persist style="display:none">
  <div class="cookie-inner">
    <p class="cookie-text">
      We use cookies for essential site functionality and analytics.
      <a href="/cookie-policy/" class="cookie-link">Cookie Policy</a>
    </p>
    <div class="cookie-actions">
      <button id="cookieReject" class="cookie-btn cookie-btn-reject">Reject</button>
      <button id="cookieAccept" class="cookie-btn cookie-btn-accept">Accept</button>
    </div>
  </div>
</div>

<script is:inline>
(function() {
  function initConsent() {
    var consent = localStorage.getItem('cookie_consent');
    var banner = document.getElementById('cookieConsent');
    if (!banner) return;

    if (!consent) {
      banner.style.display = 'block';
    } else {
      banner.style.display = 'none';
    }

    banner.querySelector('#cookieAccept')?.addEventListener('click', function() {
      localStorage.setItem('cookie_consent', 'accepted');
      banner.style.display = 'none';
      if (window.__loadAnalytics) window.__loadAnalytics();
    });

    banner.querySelector('#cookieReject')?.addEventListener('click', function() {
      localStorage.setItem('cookie_consent', 'rejected');
      banner.style.display = 'none';
    });
  }

  initConsent();
  document.addEventListener('astro:after-swap', initConsent);
})();
</script>

