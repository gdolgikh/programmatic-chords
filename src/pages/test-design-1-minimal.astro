---
import Layout from '../components/Layout.astro';
import ChordDiagram from '../components/ChordDiagram.astro';

const chord = {
  name: 'C Major',
  quality: 'Major',
  root: 'C',
  frets: [-1, 3, 2, 0, 1, 0],
  fingers: [0, 3, 2, 0, 1, 0],
  barres: [],
  description: 'One of the first chords every guitarist learns. Bright and open, C Major forms the foundation of countless songs in popular music.'
};

const stringNames = ['E', 'A', 'D', 'G', 'B', 'e'];
const fretLabel = (f) => {
  if (f === -1) return '×';
  if (f === 0) return 'Open';
  return `Fret ${f}`;
};
---

<Layout title={`${chord.name} — Design Test 1 (Minimal)`}>
  <article class="chord-page">
    <div class="chord-hero">
      <div class="chord-diagram-wrap">
        <ChordDiagram
          frets={chord.frets}
          fingers={chord.fingers}
          barres={chord.barres}
          size="large"
        />
      </div>

      <div class="chord-info">
        <h1 class="chord-name">{chord.name}</h1>
        <p class="chord-desc">{chord.description}</p>
        
        <div class="chord-frets">
          <div class="fret-list">
            {chord.frets.map((f, i) => (
              <div class:list={['fret-item', { muted: f === -1 }]}>
                <span class="fret-string">{stringNames[i]}</span>
                <span class="fret-value">{fretLabel(f)}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>

    <nav class="nav-back">
      <a href="/">← Back to all chords</a>
    </nav>
  </article>
</Layout>

<style>
  .chord-page {
    padding: 2rem 0;
  }

  .chord-hero {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 3rem;
    align-items: start;
  }

  .chord-diagram-wrap {
    display: flex;
    justify-content: center;
  }

  .chord-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .chord-name {
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0;
  }

  .chord-desc {
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
  }

  .fret-list {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .fret-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2rem;
    padding: 0.4rem 0.6rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    min-width: 52px;
  }

  .fret-item.muted {
    opacity: 0.4;
  }

  .fret-string {
    font-size: 0.7rem;
    font-weight: 700;
    color: #a78bfa;
  }

  .fret-value {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .nav-back {
    margin-top: 3rem;
  }

  .nav-back a {
    color: #a78bfa;
    text-decoration: none;
  }

  .nav-back a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .chord-hero {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
