---
import Layout from '../components/Layout.astro';
import ChordDiagram from '../components/ChordDiagram.astro';

const chord = {
  name: 'C Major',
  quality: 'Major',
  root: 'C',
  frets: [-1, 3, 2, 0, 1, 0],
  fingers: [0, 3, 2, 0, 1, 0],
  barres: [],
  description: 'One of the first chords every guitarist learns. Bright and open, C Major forms the foundation of countless songs in popular music.'
};

const stringNames = ['E', 'A', 'D', 'G', 'B', 'e'];
const fretLabel = (f) => {
  if (f === -1) return '×';
  if (f === 0) return 'Open';
  return `Fret ${f}`;
};
---

<Layout title={`${chord.name} — Design Test 3 (Stacked)`}>
  <article class="chord-page">
    <header class="chord-header">
      <div class="header-content">
        <div class="difficulty-badge">⭐⭐ Beginner</div>
        <h1>{chord.name}</h1>
        <p class="subtitle">Major Triad • C, E, G</p>
      </div>
    </header>

    <section class="section diagram-section">
      <div class="section-content">
        <div class="diagram-large">
          <ChordDiagram
            frets={chord.frets}
            fingers={chord.fingers}
            barres={chord.barres}
            size="large"
          />
        </div>
      </div>
    </section>

    <section class="section description-section">
      <h2>About</h2>
      <p>{chord.description}</p>
    </section>

    <section class="section frets-section">
      <h2>String by String</h2>
      <div class="fret-grid">
        {chord.frets.map((f, i) => (
          <div class:list={['fret-block', { muted: f === -1 }]}>
            <div class="fret-string">{stringNames[i]}</div>
            <div class="fret-value">{fretLabel(f)}</div>
          </div>
        ))}
      </div>
    </section>

    <section class="section theory-section">
      <h2>Music Theory</h2>
      <div class="theory-grid">
        <div class="theory-item">
          <h4>Notes</h4>
          <p>C, E, G</p>
        </div>
        <div class="theory-item">
          <h4>Intervals</h4>
          <p>Root, Major 3rd, Perfect 5th</p>
        </div>
        <div class="theory-item">
          <h4>Type</h4>
          <p>Major Triad</p>
        </div>
        <div class="theory-item">
          <h4>Difficulty</h4>
          <p>Beginner Friendly</p>
        </div>
      </div>
    </section>

    <section class="section tips-section">
      <h2>Learning Tips</h2>
      <div class="tips-list">
        <div class="tip">
          <span class="tip-icon">✓</span>
          <span>Press down firmly on the frets, avoiding buzzing strings</span>
        </div>
        <div class="tip">
          <span class="tip-icon">✓</span>
          <span>Keep your fingers close to the fret wire for cleaner sound</span>
        </div>
        <div class="tip">
          <span class="tip-icon">✓</span>
          <span>Practice smooth transitions with Em and Am</span>
        </div>
        <div class="tip">
          <span class="tip-icon">✓</span>
          <span>This is one of the most used chords—master it first</span>
        </div>
      </div>
    </section>

    <nav class="nav-back">
      <a href="/">← Back to all chords</a>
    </nav>
  </article>
</Layout>

<style>
  .chord-page {
    max-width: 600px;
  }

  .chord-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .difficulty-badge {
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 700;
    color: #a78bfa;
    margin-bottom: 0.5rem;
  }

  .chord-header h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0.5rem 0;
  }

  .subtitle {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    margin: 0;
  }

  .section {
    margin-bottom: 3rem;
  }

  .section h2 {
    font-size: 1.3rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgba(167, 139, 250, 0.3);
  }

  .diagram-section {
    margin-bottom: 2rem;
  }

  .diagram-large {
    display: flex;
    justify-content: center;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .section-content {
    margin: 0;
  }

  .description-section p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.7;
    margin: 0;
    font-size: 1rem;
  }

  .fret-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 0.75rem;
  }

  .fret-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem 0.5rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
  }

  .fret-block.muted {
    opacity: 0.4;
  }

  .fret-string {
    font-size: 0.75rem;
    font-weight: 700;
    color: #a78bfa;
    margin-bottom: 0.3rem;
  }

  .fret-value {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .theory-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .theory-item {
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .theory-item h4 {
    font-size: 0.85rem;
    text-transform: uppercase;
    color: #a78bfa;
    margin: 0 0 0.5rem 0;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .theory-item p {
    margin: 0;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
  }

  .tips-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .tip {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    padding: 1rem;
    background: rgba(167, 139, 250, 0.08);
    border-left: 3px solid #a78bfa;
    border-radius: 6px;
  }

  .tip-icon {
    font-weight: 700;
    color: #a78bfa;
    flex-shrink: 0;
  }

  .tip span:last-child {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.5;
  }

  .nav-back {
    margin-top: 3rem;
  }

  .nav-back a {
    color: #a78bfa;
    text-decoration: none;
  }

  .nav-back a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .chord-page {
      max-width: 100%;
    }

    .fret-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .theory-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
